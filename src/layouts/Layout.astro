---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import FloatingWhatsApp from "../components/FloatingWhatsApp.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8"/>
	<meta name="viewport" content="width=device-width"/>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
	<meta name="generator" content={Astro.generator}/>
	<meta name="description"
		  content="Ofrecemos servicios veterinarios, radiografías, peluquería, vacunación y exámenes para tu mascota. Atención de calidad desde $10.000."/>
	<meta name="robots" content="index, follow"/>
	<title>Clinica Veterinaria Pucará</title>
	<ClientRouter/>
</head>
<body class="flex flex-col min-h-screen">
<Navbar/>
<main class="max-w-screen-xl flex-1 items-center justify-between mx-auto p-4">
	<slot/>
	<FloatingWhatsApp/>
</main>
<Footer/>
</body>
</html>

<style>
    body {
        font-family: "Inter", sans-serif;
    }
</style>