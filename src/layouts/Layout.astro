---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import FloatingWhatsApp from "../components/FloatingWhatsApp.astro";
import { ClientRouter } from "astro:transitions";
import details from '../data/details.json' assert { type: 'json' };

// @ts-ignore
import { PUBLIC_SITE_URL } from 'astro:env/client'

const { title: pageTitle } = Astro.props;
const siteTitle = details.branding;
const fullTitle = pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" type="image/x-icon" />
        <link rel="apple-touch-icon" href="/favicon-180x180.png" sizes="180x180" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={details.description} />
		<meta name="robots" content="index, follow" />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<meta property="og:title" content={details.branding} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={PUBLIC_SITE_URL} />
        <meta property="og:description" content={details.description} />

		<meta property="og:image" content={PUBLIC_SITE_URL+"og-1200x630.jpg"} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content={"Logo de "+details.branding} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:image" content={PUBLIC_SITE_URL+"og-1200x630.jpg"} />

		<meta property="og:locale" content="es" />

		<title>{fullTitle}</title>

		<ClientRouter />
	</head>
	<body class="flex flex-col min-h-screen">
		<Navbar />
		<main class="max-w-screen-xl flex-1 items-center justify-between mx-auto p-4 pt-20 md:pt-24">
			<slot />
			<FloatingWhatsApp />
		</main>
		<Footer />
	</body>
</html>

<style>
    body {
        font-family: "Inter", sans-serif;
    }
</style>
