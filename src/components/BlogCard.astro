---
const { title, description, image, link } = Astro.props;
---

<a href={link} class="block">
    <div
        class="relative rounded-xl overflow-hidden shadow-lg hover:shadow-lg h-96 flex flex-col justify-end hover:scale-102 transform transition duration-300"
        style={`background-image: url(${image}); background-size: cover; background-position: center;`}
    >
        <div class="bg-gradient-to-t from-black/90 via-black/60 to-transparent p-4 pt-16">
            <h3 class="text-white text-lg font-semibold mb-1 line-clamp-1">{title}</h3>
            <p class="text-gray-200 text-sm line-clamp-2 mb-4">{description}</p>
        </div>
    </div>
</a>