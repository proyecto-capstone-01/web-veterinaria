---
const { post } = Astro.props;

const title = post.title;
const description = post.meta?.description || "Sin descripci√≥n.";
const image = post.heroImage?.url || "/placeholder.png";
const link = `/blog/${post.slug}`;
---

<a href={link} class="block group">
    <div
        class="relative rounded-xl overflow-hidden shadow-sm hover:shadow-xl h-96 flex flex-col justify-end transform transition duration-300 group-hover:scale-[1.01]"
        style={`background-image: url(${image}); background-size: cover; background-position: center;`}
    >
        <div class="bg-gradient-to-t from-black/90 via-black/60 to-transparent p-4 pt-16">
        <div class="p-4 rounded-lg backdrop-blur-sm bg-black/30">
            <h3 class="text-white text-lg font-semibold mb-1 line-clamp-1">{title}</h3>
            <p class="text-gray-300 text-sm line-clamp-2 mb-4">{description}</p>
            <p class="text-gray-400 text-xs">{new Date(post.publishedAt).toLocaleDateString("es-CL")}</p>
        </div>
        </div>
    </div>
</a>