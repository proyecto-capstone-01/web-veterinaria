---
import Buttons from "../components/Buttons.astro";
import Separator from "./Separator.astro";
---

<Separator title="Ubicación y Horarios" />

<div class="max-w-screen-lg mx-auto xl:min-w-5xl lg:min-w-4xl md:min-w-2xl px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 py-10">

        <!-- MAPA (columna más grande) -->
        <div class="md:col-span-2 w-full rounded-2xl overflow-hidden shadow-md border border-gray-200 h-[380px] md:h-[500px]">
            <iframe
                class="w-full h-full"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3327.788307740868!2d-70.6305236847962!3d-33.57758598074267!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662c4f1f479e7c7%3A0x882cb060f583f0b!2sEsmeralda%2097%2C%20San%20Bernardo%2C%20Regi%C3%B3n%20Metropolitana%2C%20Chile!5e0!3m2!1ses!2scl!4v1694610000000!5m2!1ses!2scl"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Ubicación en Google Maps"
            ></iframe>
        </div>

        <!-- INFO (columna derecha) -->
        <div class="md:col-span-1 flex flex-col gap-5">

            <!-- TIMELINE DE HORARIOS -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Horarios</h2>

                <div class="relative border-l-2 border-gray-300 pl-3 space-y-10">

                    <!-- Lunes a viernes -->
                    <div class="relative">
                        <div class="absolute -left-[22px] top-1 w-5 h-5 bg-primary rounded-full shadow"></div>
                        <p class="text-lg font-semibold text-gray-900 pl-4">Lunes a Viernes</p>
                        <p class="text-gray-600 text-md pl-4">07:00 — 22:00 hrs</p>
                    </div>

                    <!-- Sábado y domingo -->
                    <div class="relative">
                        <div class="absolute -left-[22px] top-1 w-5 h-5 bg-primary rounded-full shadow"></div>
                        <p class="text-lg font-semibold text-gray-900 pl-4">Sábado y Domingo</p>
                        <p class="text-gray-600 text-md pl-4">09:00 — 21:00 hrs</p>
                    </div>

                    <!-- Festivos -->
                    <div class="relative">
                        <div class="absolute -left-[22px] top-1 w-5 h-5 bg-primary rounded-full shadow"></div>
                        <p class="text-lg font-semibold text-gray-900 pl-4">Festivos y Feriados</p>
                        <p class="text-gray-600 text-md pl-4">Cerrado</p>
                    </div>

                </div>
            </div>

            <!-- DIRECCIÓN -->
            <div>
                <h3 class="text-xl font-semibold text-gray-900">Dirección</h3>
                <p class="text-gray-700 leading-relaxed">
                    Esmeralda 97, San Bernardo<br />
                    Región Metropolitana, Chile <br />
                    <span class="text-gray-600 text-sm font-bold">Entrada por Avenida Portales.</span>
                </p>
            </div>

            <!-- BOTONES -->
            <div class="flex flex-col">
                <Buttons
                    variant="secondary"
                    text="Ver en Google Maps"
                    url="https://www.google.com/maps/place/Esmeralda+97,+San+Bernardo,+Chile"
                    target="_blank"
                ></Buttons>
            </div>

        </div>
    </div>
</div>
