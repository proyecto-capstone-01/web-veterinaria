---
import Button from './Buttons.astro';
---
<section class="relative bg-primary-dark text-white rounded-2xl shadow-lg overflow-hidden min-h-[70vh] h-full">
    
    <!-- Imagen de fondo para móvil y tablet -->
    <img src="/portrait-dog.webp" alt="Perro" class="absolute inset-0 w-full h-full object-cover lg:hidden z-0"/>
    
    <!-- Imagen lateral para desktop (independiente) -->
    <div class="hidden lg:block absolute top-0 right-0 h-full z-0">
        <img src="/portrait-dog.webp" alt="Perro" class="h-full object-fill"/>
    </div>

    <!-- Degradado encima de la imagen -->
    <div class="absolute inset-0 z-10 
        bg-gradient-to-t from-black/90 via-black/60 to-transparent 
        lg:from-black/70 lg:via-black/30 lg:to-transparent">
    </div>

    <!-- Contenido -->
    <div class="relative z-20 max-w-screen-xl mx-auto px-6 sm:px-8 flex lg:flex-row items-center min-h-[70vh]">
        
        <!-- Texto: ancho controlado a 3/5 en LG -->
        <div class="w-full xl:w-3/5 lg:w-4/5 text-center lg:text-left flex flex-col justify-center items-center lg:items-start lg:py-32 lg:space-y-5 space-y-10">
            <!-- Contenedor de textos -->
            <div class="flex flex-col justify-center items-center lg:items-start lg:pl-4">
                <h1 class="text-4xl lg:text-6xl font-bold leading-snug sm:leading-tight lg:pt-0 pt-12">
                    Tu mascota <span class="">merece lo mejor</span>, nosotros se lo damos
                </h1>
                <p class="mt-4 text-xl">
                    Reserva tu cita aquí de manera completamente on-line
                </p>
            </div>

            <!-- Botones: siempre al final del hero en móviles -->
            <div class="mt-auto flex flex-col sm:flex-row justify-center lg:justify-start gap-6 w-full md:w-auto lg:pl-4">
                <Button text="Agendar visita" url="/toSchedule" variant="primary" class="w-auto"/>
                <a href="https://wa.me/" target="_blank" 
                    class="w-full sm:w-auto px-5 py-3 bg-white text-black font-semibold rounded-lg flex items-center justify-center gap-2 hover:bg-gray-200 transition">
                    <img src="/WhatsApp.svg" class="h-6" alt="" />
                    WhatsApp
                </a>
            </div>
        </div>

    </div>
</section>
