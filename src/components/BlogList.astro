---
import BlogCard from "./BlogCard.astro";
import blogPosts from '../../public/api/blog.json';
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3">
    {blogPosts.map((post) => (
        <BlogCard 
            title={post.title}
            description={post.description}
            image={post.image}
            link={`/blogs/${post.id}`}
        />
    ))}
</div>
